<Window x:Class="SwissWorkSafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:SwissWorkSafe.ViewModels"
        Title="SwissWorkSafe"
        Height="750"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <!-- 
        Main Grid:
        - Contains a ContentControl bound to the 'CurrentView' property in the ViewModel.
        - The displayed user control changes as 'CurrentView' changes.
    -->
    <Grid>
        <ContentControl Content="{Binding CurrentView}" />
    </Grid>

</Window>